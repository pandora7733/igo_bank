// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

// 1. 사용자 모델
model User {
  id        Int       @id @default(autoincrement())
  password  String
  username  String
  phone     String    @unique
  accounts  Account[] // 사용자가 가진 계좌들 (1:N 관계)
  createdAt DateTime  @default(now())
}

// 2. 계좌 모델
model Account {
  id             Int           @id @default(autoincrement())
  accountNumber  String        @unique // 계좌번호 (Unique Key)
  balance        Float         @default(0)
  ownerId        Int
  owner          User          @relation(fields: [ownerId], references: [id])
  
  // 거래 내역과의 관계
  sentTransactions     Transaction[] @relation("Sender")
  receivedTransactions Transaction[] @relation("Receiver")
}

// 3. 거래 내역 모델
model Transaction {
  id          Int      @id @default(autoincrement())
  timestamp   DateTime @default(now())
  type        String   // 입금(DEPOSIT), 출금(WITHDRAWAL), 이체(TRANSFER)
  amount      Float
  
  // 보내는 이 (이체/출금 시)
  senderId    Int?
  sender      Account? @relation("Sender", fields: [senderId], references: [id])
  
  // 받는 이 (이체/입금 시)
  receiverId  Int?
  receiver    Account? @relation("Receiver", fields: [receiverId], references: [id])
}